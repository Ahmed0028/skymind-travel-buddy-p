# ── Google AI / Gemini ────────────────────────────────────────────────────────
# Required when GOOGLE_GENAI_USE_VERTEXAI=0 (direct Gemini API)
GOOGLE_API_KEY=your-gemini-api-key

# Set to 1 to use Vertex AI instead of the direct Gemini API
GOOGLE_GENAI_USE_VERTEXAI=0

# ── Google Cloud ──────────────────────────────────────────────────────────────
# Required when GOOGLE_GENAI_USE_VERTEXAI=1 (Vertex AI)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# ── Aviation API ──────────────────────────────────────────────────────────────
AVIATIONSTACK_API_KEY=your-aviationstack-api-key

# ── Model Configuration ───────────────────────────────────────────────────────
ROOT_AGENT_MODEL=gemini-2.0-flash
SUB_AGENT_MODEL=gemini-2.0-flash
